{
    "name": "node.js-epam-2024",
    "version": "1.0.0",
    "description": "",
    "main": "src/task1/index.ts",
    "scripts": {
        "start:task1": "tsx watch src/task1/index.ts",
        "start:task2": "tsx watch src/task2/activityMonitor.ts",
        "start:task3": "tsx watch src/task3/index.ts",
        "start:task4": "tsx watch src/task4/index.ts",
        "start:task5": "pm2 start src/task5/server.ts --name task5-server --watch",
        "stop:task5": "pm2 stop task5-server",
        "start:task6": "pm2 start src/task6/index.ts --name task6-server --watch",
        "stop:task6": "pm2 stop task6-server",
        "start:task7": "nodemon --watch \"src/task7/**\" --ext \"ts,json\" --exec \"ts-node src/task7/index.ts\"",
        "stop:task7": "pm2 stop task7-server",
        "start:task8:migartion:up": "tsc && npx mikro-orm migration:up",
        "start:task8:migartion:down": "tsc && npx mikro-orm migration:down",
        "start:task8:seeds": "tsc && npx mikro-orm seeder:run --class=InitialUsersSeeder && npx mikro-orm seeder:run --class=InitialCartsSeeder",
        "start:task8:app": "nodemon --watch \"src/task8/**\" --ext \"ts,json\" --exec \"ts-node src/task8/server.ts\"",
        "start:task9": "nodemon --watch \"src/task9/**\" --ext \"ts,json\" --exec \"ts-node src/task9/server.ts\"",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "test": "jest --testPathIgnorePatterns .e2e.test.ts",
        "test:e2e": "jest --testMatch='**/*.e2e.test.ts'",
        "test:coverage": "jest --coverage"
    },
    "mikro-orm": {
        "useTsNode": true,
        "configPaths": [
            "./src/task9/orm.config.ts"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Eillihn/Node.js-EPAM-2024.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/Eillihn/Node.js-EPAM-2024/issues"
    },
    "homepage": "https://github.com/Eillihn/Node.js-EPAM-2024#readme",
    "devDependencies": {
        "@mikro-orm/migrations": "^6.2.3",
        "@mikro-orm/seeder": "^6.2.3",
        "@types/bcryptjs": "^2.4.6",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/joi": "^17.2.3",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/mongoose": "^5.11.97",
        "@types/node": "^20.11.26",
        "@types/supertest": "^6.0.2",
        "@types/uuid": "^9.0.8",
        "@typescript-eslint/eslint-plugin": "^7.3.1",
        "@typescript-eslint/parser": "^7.3.1",
        "eslint": "^8.57.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-prettier": "^5.1.3",
        "jest": "^29.7.0",
        "npm-run-all": "^4.1.5",
        "pm2": "^5.3.1",
        "prettier": "^3.2.5",
        "supertest": "^6.3.4",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "tsx": "^4.7.1",
        "typescript": "^5.4.2"
    },
    "dependencies": {
        "@mikro-orm/cli": "^6.2.2",
        "@mikro-orm/core": "^6.2.3",
        "@mikro-orm/postgresql": "^6.2.3",
        "@mikro-orm/reflection": "^6.2.3",
        "axios": "^1.6.8",
        "bcryptjs": "^2.4.3",
        "csvtojson": "^2.0.10",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "joi": "^17.12.2",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.3.1",
        "nodemon": "^3.1.0",
        "pg": "^8.11.5",
        "uuid": "^9.0.1"
    }
}
